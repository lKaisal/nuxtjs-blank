@import './tools'

@keyframes blink
  0%, 100%
    opacity 1
  50%
    opacity 0

@keyframes fadeIn
  0%
    opacity 0
  100%
    opacity 1

@keyframes slideUp
  100%
    transform translateY(-100%)

@keyframes marqueeHoriz
  100%
    transform translateX(-100%)

@keyframes bounceHoriz
  0%
    transform translate(0px, 0px)
  20%
    transform translate(20px, 0px)
  70%
    transform translate(-30px, 0px)
